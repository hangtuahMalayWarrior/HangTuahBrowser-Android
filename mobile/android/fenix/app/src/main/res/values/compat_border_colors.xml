    <attr name="mozac_caption_text_color" format="reference" />

    <!-- Minimal tooltip color fallbacks (map to existing app colors) -->
    <color name="compat_tooltip_frame_background">@color/fx_mobile_layer_color_2</color>
    <color name="compat_tooltip_foreground_color">@color/fx_mobile_text_color_primary</color>

</resources>